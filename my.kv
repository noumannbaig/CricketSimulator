<CreateAccountWindow>:
    name: "Sign Up"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2


            Image:
                source: 'sign.png'
                size_hint: 0.5, 0.2
                pos_hint: {"x":0.3, "top":0.95}
            TextInput:
                hint_text:'User Name* '
                pos_hint: {"x":0.2, "top":0.77}
                size_hint: 0.7,0.07
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
            TextInput:
                hint_text:'Email* '
                pos_hint: {"x":0.2, "top":0.77-0.10}
                size_hint: 0.7,0.07
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
            TextInput:
                hint_text:'Password* '
                pos_hint: {"x":0.2, "top":0.75-0.10*2}
                size_hint: 0.7,0.07
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4
            TextInput:
                hint_text:'Confirm Password* '
                pos_hint: {"x":0.2, "top":0.75-0.10*3}
                size_hint: 0.7,0.07
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.25,"y":0.2}
            size_hint: 0.6, 0.09
            font_size:14
            font_name:"Comic"
            color:0,0,0,1
            markup: True
            text: "[color=#6A5ACD][u]Already have an Account? Log In[/u][/color]"
            background_color:( 240/255, 248/255, 255/255, 0)
            on_release:
                root.manager.transition.direction = "left"
                root.login()
        RectangleFlatButton:
            background_color:( 180/255, 177/255, 1)
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.2, 0.07
            markup: True
            text: "[color=#6A5ACD][b]Back!![/b][/color]"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.login()
        RectangleFlatButton:
            background_color:( 180/255, 177/255, 1)
            pos_hint:{"x":0.6,"y":0.05}
            size_hint: 0.2, 0.07
            markup: True

            text: "[color=#6A5ACD][b]Submit!![/b][/color]"

            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()



<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Image:
            source: 'login.png'
            size_hint: 0.35, 0.15
            pos_hint: {"x":0.35, "top":0.9}

        Label:
            markup: True
            text:"[color=#6A5ACD][b]LET'S LOGIN[/b][/color]"
            font_size: 36
            font_name:"Comic"
            pos_hint: {"x":0.35, "top":0.78}
            size_hint: 0.35, 0.15
        TextInput:
            hint_text:'Email* '
            id: email
            # font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.2 , "top":0.6}
            size_hint: 0.7, 0.07


        TextInput:
            hint_text:'Password*'
            id: password
            # font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.2, "top":0.5}
            size_hint: 0.7, 0.07
            border: 30, 30, 30, 30


        RectangleFlatButton:
            pos_hint:{"x":0.15,"y":0.20}
            size_hint: 0.7, 0.07
            halign: "center"
            background_color:( 70/255, 24/255, 208/255)
            font_size: (root.width**2 + root.height**2) / 13**4
            border: 10,10,10,10
            markup : True
            text: "[color=#6A5ACD][b]Login!![/b][/color]"

            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.2,"y":0.1}
            size_hint: 0.6, 0.01
            font_size:14
            font_name:"Comic"
            background_color:( 240/255, 248/255, 255/255, 0)
            color:0,0,0,4
            markup: True
            text: "[u][color=#6A5ACD]Don't have an Account? Create One[/color][/u]"
            radius: 40
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()
