<RectangleFlatButton>:

    background_color: 0, 0, 0, 0
    color: root.primary_color

    canvas.before:
        Color:
            rgba: root.primary_color
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)



<RoundedTextInput>:
    background_color: 0, 0, 0, 0
    padding: 20, 20
    multiline: False

    canvas.before:
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, 10, 10, 10]
